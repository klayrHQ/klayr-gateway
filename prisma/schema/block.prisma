model Block {
  height               Int           @id @unique
  id                   String        @unique
  version              Int
  timestamp            Int
  previousBlockID      String
  stateRoot            String
  assetRoot            String
  eventRoot            String
  transactionRoot      String
  validatorsHash       String
  generatorAddress     String
  generator            Account       @relation(fields: [generatorAddress], references: [address])
  maxHeightPrevoted    Int
  maxHeightGenerated   Int
  impliesMaxPrevotes   Boolean
  signature            String
  aggregateCommit      String
  numberOfTransactions Int
  numberOfAssets       Int
  isFinal              Boolean       @default(false)
  reward               String
  totalBurnt           Int           @default(0)// sum(txs.minFee)
  networkFee           Int           @default(0)// sum(txs.fee) - sum(txs.minFee)
  totalForged          Int           // reward + networkFee + totalBurnt
  assets               Asset[]
  transactions         Transaction[]
}
