model NextBlockToSync {
  id     Int @id @unique
  height Int
}

model Block {
  height                Int      @id @unique
  id                    String   @unique
  version               Int
  timestamp             Int
  previousBlockID       String
  stateRoot             String
  assetRoot             String
  eventRoot             String
  transactionRoot       String
  validatorsHash        String
  generatorAddress      String
  maxHeightPrevoted     Int
  maxHeightGenerated    Int
  impliesMaxPrevotes    Boolean
  signature             String
  aggregateCommit       AggregateCommit?
  assets                Asset[] 
}


model AggregateCommit {
  id                   Int      @default(autoincrement()) @id
  height               Int     
  aggregationBits      String
  certificateSignature String
  block                Block    @relation(fields: [blockHeight], references: [height])
  blockHeight          Int      @unique
}

// TODO: Most efficient?
model Asset {
  id        Int     @default(autoincrement()) @id
  height    Int     
  module    String
  data      String
  block     Block   @relation(fields: [height], references: [height])
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


